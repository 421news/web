{{!< default}}

<html>
  <head>
    {{> "global-head"}}
    <title>421 | Tecnomagia para la vida real</title>
    <link href="{{asset "css/index.css"}}" rel="stylesheet" type="text/css">
    <style>
        #doom-iframe {
            margin-top: 100px;
        }
    </style>
  </head>
  <body>
    <div class="page-wrapper">
      {{> "general-styling"}} <!-- TODO: Revisar -->
      {{> "site-nav-es"}}
      <main>
        <!-- Doom easter-egg iframe (js-dos hosted) -->
        <div id="doom-easter" style="max-width:900px;margin:0 auto;">
        <iframe
            id="doom-iframe"
            src="https://js-dos.com/games/doom.exe.html"
            width="900"
            height="500"
            frameborder="0"
            allowfullscreen
            title="Play Doom"
            sandbox="allow-scripts allow-pointer-lock allow-same-origin"
            style="width:100%;height:56vw;max-height:720px;">
        </iframe>
        <p style="font-size:12px;color:#888;text-align:center;margin-top:6px;">
            Click the game area and press <strong>Enter</strong> to start. Use arrow keys / WASD + Ctrl to shoot.
        </p>
        </div>
      </main>

      {{> "site-footer"}}

    </div>
    <script>
        // make sure iframe can receive keyboard input after user clicks
        const iframe = document.getElementById('doom-iframe');
        iframe.addEventListener('load', function() {
            // focusing requires a user gesture â€” encourage users to click
            // this small helper focuses the iframe if user clicks the container
            document.getElementById('doom-easter').addEventListener('click', function() {
            try { iframe.contentWindow.focus(); } catch (e) { /* cross-origin may block this */ }
            });
        });
    </script>
  </body>
</html>