<div role='listitem' class='w-dyn-item' data-post-id='{{id}}'>
  <a href='{{url}}' class='post-card_link w-inline-block'>
    <div class='post-card'>
      <div
        class='post-card_cover'
        style="background-image: url('{{feature_image}}')"
      >
        <div class='post-card_ico'>
          {{#if primary_tag}}
            {{#if primary_tag.feature_image}}
              <img
                src='{{img_url primary_tag.feature_image size='small'}}'
                alt='{{primary_tag.name}} featured image'
                class='primary-tag-image'
                width='28'
              />
            {{/if}}
          {{/if}}
        </div>
        <div
          class='post-card_overlay'
          style="background-size: cover; background-position: center;"
        >
        </div>
        <div class='tag-box'{{#if primary_tag}} data-tag-url='{{#has tag="#en"}}/en{{else}}/es{{/has}}/tag/{{primary_tag.slug}}/'{{/if}}>
          {{#if primary_tag}}
            {{primary_tag.name}}{{#has tag="#ensayo"}}<span class="tag-box-type"> · ensayo</span>{{/has}}{{#has tag="#guia"}}<span class="tag-box-type"> · guía</span>{{/has}}{{#has tag="#resena"}}<span class="tag-box-type"> · reseña</span>{{/has}}{{#has tag="#cronica"}}<span class="tag-box-type"> · crónica</span>{{/has}}{{#has tag="#entrevista"}}<span class="tag-box-type"> · entrevista</span>{{/has}}{{#has tag="#novedades"}}<span class="tag-box-type"> · novedades</span>{{/has}}
          {{else}}
            Uncategorized
          {{/if}}
        </div>
      </div>
      <div class='post-card_info'>
        <h3 class=''>{{title}}</h3>
        <div class='pt-xsmall'>
          <div class='is-italic'>
            {{#primary_author}}
              {{name}}
            {{/primary_author}}
          </div>
          <div class='is-italic'>
            {{date published_at format='D/M/YYYY'}}
          </div>
        </div>
      </div>
    </div>
  </a>
</div>