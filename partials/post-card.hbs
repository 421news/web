<article role='listitem' class='w-dyn-item' data-post-id='{{id}}'>
  <a href='{{url}}' class='post-card_link w-inline-block'>
    <div class='post-card'>
      <div
        class='post-card_cover'
        style="background-image: url('{{feature_image}}')"
      >
        <div class='post-card_ico'>
          {{#if primary_tag}}
            {{#if primary_tag.feature_image}}
              <img
                src='{{img_url primary_tag.feature_image size='small'}}'
                alt='{{primary_tag.name}} featured image'
                class='primary-tag-image'
                width='28'
              />
            {{/if}}
          {{/if}}
        </div>
        <div
          class='post-card_overlay'
          style="
            background-image: url('{{asset "images/textura.png"}}');
            background-size: cover;
            background-position: center;
          "
          onmouseover="
            this.style.backgroundImage='linear-gradient(180deg, var(--verde), var(--amarillo)), url(\'{{asset
            "images/textura.png"
          }}\')';
            this.style.backgroundBlendMode='overlay';
          "
          onmouseout="
            this.style.backgroundImage='url(\'{{asset
            "images/textura.png"
          }}\')';
            this.style.backgroundBlendMode='';
          "
        >
        </div>
        <div class='tag-box'>
          {{#if primary_tag}}
            {{primary_tag.name}}
          {{else}}
            Uncategorized
          {{/if}}
        </div>
      </div>
      <div class='post-card_info'>
        <h3 class=''>{{title}}</h3>
        <div class='pt-xsmall'>
          <div class='is-italic'>
            {{#primary_author}}
              {{name}}
            {{/primary_author}}
          </div>
          <div class='is-italic'>
            {{date published_at format='D/M/YYYY'}}
          </div>
        </div>
      </div>
    </div>
  </a>
</article>