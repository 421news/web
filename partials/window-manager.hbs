<!-- Window Manager: Launcher + Taskbar + Window Container -->
<div id="wm-root" class="wm-root">
  <!-- Launcher Button (fixed left) -->
  <button id="wm-launcher" class="wm-launcher" title="Explorador de archivos">
    <span class="wm-launcher-icon">&#128187;</span>
  </button>

  <!-- Taskbar (fixed bottom, hidden by default) -->
  <div id="wm-taskbar" class="wm-taskbar" style="display:none;">
    <div class="wm-taskbar-items" id="wm-taskbar-items"></div>
  </div>

  <!-- Windows render here dynamically via JS -->
  <div id="wm-windows" class="wm-windows"></div>
</div>
