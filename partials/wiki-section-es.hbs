<div class="preview-section">
    <div class="global-container">
        <div class="pv-huge">
            <div class="preview-section_flex-header">
                <h2>Lo último en la Wiki</h2>
                <a href="/es/tag/wiki" class="button w-button">
                    Explorar la wiki
                </a>
            </div>
            <div class="post-grid w-dyn-list">
                <div role="list" class="post-cols w-dyn-items">
                    {{#get "posts"
                        include="tags,authors"
                        filter="tag:'wiki'+tag:-'hash-en'"
                        limit="4"
                        order="published_at desc"
                        as |articles|
                    }}
                        {{#if articles}}
                        {{#foreach articles}}
                            {{> "post-card"}}
                        {{/foreach}}
                        {{else}}
                        <p>Próximamente</p>
                        {{/if}}
                    {{/get}}
                </div>
            </div>
        </div>
    </div>
</div>