                    </a>
                </div>
                </div>
            </div>
            </div>
        </div>

        <!-- RELATED POSTS -->
        <div class="preview-section">
            <div class="global-container">
                <div class="pv-huge">
                    <div class="preview-section_flex-header">
                        <h2>Related posts</h2>
                        {{#if primary_tag}}
                            <a href="/tag/{{primary_tag.slug}}" class="button w-button">Read more</a>
                        {{/if}}
                    </div>
                    {{#get "posts"
                        include="tags,authors"
                        limit="4"
                        filter="tags:[{{primary_tag.slug}}],primary_tag:{{primary_tag.slug}}"
                        as |items|
                    }}
                        <div class="post-grid w-dyn-list">
                            {{#if items}}
                                <div role="list" class="post-cols w-dyn-items">
                                    {{#foreach posts}}
                                        {{> "post-card"}}
                                    {{/foreach}}
                                </div>
                            {{/if}}
                            {{#unless items}}
                                <div class="post-grid-empty">
                                    <div>Ups, nothing here yet.</div>
                                </div>
                            {{/unless}}
                        </div>
                    {{/get}}
                </div>
            </div>
        </div>
    </main>
    {{> "site-footer" lang="en"}}
</div>