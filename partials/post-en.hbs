            <div class="pv-large">
            <div class="rich-text w-richtext">{{content}}</div>
            <div class="pt-medium">
                <div class="post_author-box">
                <div class="author-box">
                    {{#primary_author}}
                        <img
                            src="{{img_url profile_image size="medium"}}"
                            loading="lazy"
                            alt="{{name}}'s profile picture"
                            class="author-photo is-medium"
                        />
                    {{/primary_author}}
                    <p>
                        {{#primary_author}}
                            <a href="{{url}}" class="author-name_link">{{name}}</a>
                        {{/primary_author}}
                    </p>
                </div>
