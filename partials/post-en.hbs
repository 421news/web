
<div class="page-wrapper">
    {{> "reading-progress-bar"}}
    {{> "general-styling"}}
    {{> "site-nav-en"}}
    <style>
        h2 {
        margin-bottom: 20px;
        }
        figcaption {
        margin-bottom: 20px;
        }
    </style>
