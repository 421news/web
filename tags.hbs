{{!< default}}
{{> "breadcrumb-tag" tagName="Tags"}}

  <div class="page-wrapper">
    {{> "general-styling"}}
    {{> "site-nav-es"}}
    <main>
      <!-- FEATURED POST -->
      {{#get "posts" include="tags,authors" filter="tag:-'Wiki'+featured:true+tag:-'hash-en'" limit="1" as |items|}}
      <div class="w-dyn-list">
        {{#if items}}<div role="list" class="w-dyn-items">
          {{#foreach items}}<div role="listitem" class="w-dyn-item">
            <div class="hero-home" style="background-image: url('{{feature_image}}')">
              <div class="hero-home_content">
                <div class="global-container">
                  <div class="hero-home_cols">
                    <div id="w-node-e9273b9a-331e-3716-991c-df5eb4f0489f-1cf55c9d" class="hero-home_meta">
                     <span class="plain-tags" style="background-color: #121212; padding: 5px">
  {{#foreach tags}}
    <a href="{{url}}">{{name}}</a>{{#unless @last}}, {{/unless}}
  {{/foreach}}
</span>

                      <a href="{{url}}" style="text-decoration: none">
                        <div id="w-node-_19e5bfb4-641d-9263-3e20-ad3f2c295cea-1cf55c9d" class="hero-title_wrapper">
                          <div class="flashy-h1_wrapper">
                            <div class="w-embed"><h1 class="flashy-h1 flashy-h1-shadow"><span>{{ title }}</span></h1></div>
                            <div class="w-embed"><div class="flashy-h1 is-shadow"><span class="flashy-h1_shadow">{{ title }}</span></div></div>
                          </div>
                        </div>
                      </a>
                      <div class="author-box is-home" style="background-image: url('{{asset "images/rectangle-217.svg"}}')">
                        {{#primary_author}}
                          <a href="{{url}}">
                            <img src="{{img_url profile_image size="medium"}}" loading="lazy" alt="{{name}}'s profile picture" class="author-photo">
                          </a>
                        {{/primary_author}}
                        <div class="w-embed">
                          <p class="is-italic">
                            {{ date updated_at format="D/M/YYYY" }}
                            —
                            {{#primary_author}}
                              <a href="{{url}}" class="author-name_link">{{name}}</a>
                            {{/primary_author}}
                          </p>
                        </div>
                      </div>
                    </div>
                    <a id="w-node-_7694fb40-2359-8a94-5bdf-a5cfb066ef95-1cf55c9d" href="{{url}}" class="button is-icon is-secondary w-inline-block">
                      <div>Leer</div><img src="{{asset "images/arrow-3.svg"}}" loading="lazy" alt="">
                    </a>
                  </div>
                </div>
              </div>
              <div class="hero_overlays">
                <div class="hero_texture" style="background-image: url('{{asset "images/textura.webp"}}')"></div>
              </div>
            </div>
          </div>{{/foreach}}
        </div>{{/if}}
        {{#unless items}}<div class="w-dyn-empty">
          <div>No featured non-Wiki posts found.</div>
        </div>{{/unless}}
      </div>{{/get}}
        <!-- POPULAR POSTS -->
      <div class="preview-section bg-gradient">
        <div class="global-container">
          <div class="pv-huge">
            <div class="text-center">
              <h2 class="text-black">Textos destacados</h2>
            </div>
            {{#get "posts" include="tags,authors" limit="4" order="published_at desc" filter="featured:true+tag:-'Wiki'+tag:-'hash-en'" as |items|}}<div class="post-grid w-dyn-list">
              {{#if items}}<div role="list" class="post-cols w-dyn-items">
                 {{#foreach posts}}
    {{> "post-card"}}
  {{/foreach}}
              </div>{{/if}}
              {{#unless items}}<div class="w-dyn-empty">
                <div>Ups, no hay nada acá todavía.</div>
              </div>{{/unless}}
            </div>{{/get}}
          </div>
        </div>
      </div>
      <div class="preview-section">
  <div class="global-container">
    <div class="pv-huge">
      <div class="preview-section_flex-header pb-small">
        <h2>Últimos textos</h2>
      </div>
      <div class="post-cols w-dyn-list">
      {{> "tps_alt-es" tag="Cultura" slug="cultura"}}
       {{> "tps_alt-es" tag="Tecnología" slug="tecnologia"}}
        {{> "tps_alt-es" tag="Juegos" slug="juegos"}}
         {{> "tps_alt-es" tag="Vida real" slug="vida-real"}}
      </div>
    </div>
  </div>
</div>
  <div class="preview-section">
  <div class="global-container">
    <div class="pv-huge">
      <div class="preview-section_flex-header">
        <h2>Lo último en la Wiki</h2>
        <a href="/tag/wiki" class="button w-button">Explorar la wiki</a>
      </div>
      <div class="post-grid w-dyn-list">
        <div role="list" class="post-cols w-dyn-items">      
          {{#get "posts" include="tags,authors" filter="tag:'wiki'" limit="4" order="published_at desc" as |articles|}}
            {{#if articles}}
              {{#foreach articles}}
                {{> "post-card"}}
              {{/foreach}}
            {{else}}
              <p>Próximamente</p>
            {{/if}}
          {{/get}}
        </div>
      </div>
    </div>
  </div>
</div>
    </main>
    <!-- FILE BROWSER NAVIGATION -->
    <div class="global-container pt-small pb-small">
      {{> "file-browser"}}
    </div>
    {{> "site-footer"}}
  </div>
  <script src="https://d3e54v103j8qbb.cloudfront.net/js/jquery-3.5.1.min.dc5e7f18c8.js?site=6669c61faddc5cdc1cf55c96" type="text/javascript" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous" defer></script>
  <script src="{{asset "js/webflow.js"}}" type="text/javascript" defer></script>
<script>
  var loadedPosts = 4; // This variable keeps track of the total number of posts loaded so far.
</script>