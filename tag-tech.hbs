<body>
  <div class="page-wrapper">
    {{> "general-styling"}}
    {{> "site-nav-en"}}
    <main>
      <!-- FEATURED POST -->
      {{> "tag-page-featured-post" slug="tech"}}

      <!-- HIGHLIGHTED POSTS -->
